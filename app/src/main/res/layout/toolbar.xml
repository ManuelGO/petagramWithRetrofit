<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tool_bar"
    android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    app:title=""
    android:elevation="@dimen/toolbar_elevation">


    <ImageView
        android:id="@+id/tool_bar_icon_left"
        android:layout_width="@dimen/toolbar_icons_width"
        android:layout_height="@dimen/toolbar_icons_height"
        android:src="@drawable/icons8_dog_paw_64"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/toolbar_icons_title"
        android:textStyle="bold"
        android:text="@string/app_name"/>

    <ImageView
        android:id="@+id/tool_bar_icon_right"
        android:layout_width="@dimen/toolbar_icons_width"
        android:layout_height="@dimen/toolbar_icons_height"
        android:tint="@color/colorPrimaryDark"
        android:onClick="goToNextActivity"
        android:layout_gravity="right"
        android:src="@drawable/icons8_hotel_96"/>


</androidx.appcompat.widget.Toolbar>